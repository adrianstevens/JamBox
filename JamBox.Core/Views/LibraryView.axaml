<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
    x:Class="JamBox.Core.Views.LibraryView">

    <UserControl.Content>
        <Grid
            Background="#1a202c">
            
            <Image
                Source="avares://JamBox.Core/Assets/icon-koi.png"
                Opacity="0.03"
                Width="800"
                Margin="0,0,-150,-150"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid 
                    Grid.Row="0">

                    <!-- Title -->
                    <Grid HorizontalAlignment="Left">
                        <Image
                            Source="avares://JamBox.Core/Assets/icon-logo-text.png"
                            Width="200"
                            Margin="20,0,0,0" />
                    </Grid>

                    <!-- Search and Tabs -->
                    <StackPanel 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Margin="40,25">
                        <TextBox 
                            Watermark="SEARCH" 
                            Width="256" 
                            HorizontalAlignment="Right"
                            Classes="custom-textbox" />
                        <StackPanel 
                            Spacing="10" 
                            Orientation="Horizontal" 
                            Margin="0,10,0,0">
                            <TextBlock Text="ARTISTS" FontWeight="Bold" />
                            <TextBlock Text="GENRES" />
                            <TextBlock Text="ALBUMS" />
                            <TextBlock Text="SONGS" />
                            <TextBlock Text="PLAYLISTS" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Music Collection -->
                <Grid 
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" MinWidth="200" MaxWidth="400"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="4*" MinWidth="200" MaxWidth="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- Artists -->
                    <Grid 
                        Grid.Column="0" 
                        RowSpacing="10"
                        Margin="5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0">
                            <Button 
                                Content="{Binding ArtistCount}" 
                                Command="{Binding ShowAllArtistCmd}" 
                                Classes="transparent-button" />
                            <Button 
                                Content="{Binding ArtistSortStatus}" 
                                Command="{Binding ToggleArtistSortCmd}"
                                Classes="transparent-button"
                                HorizontalAlignment="Right" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <ListBox
                                ItemsSource="{Binding Artists}"
                                SelectedItem="{Binding SelectedArtist}"
                                SelectionMode="Single">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            BorderBrush="Transparent"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="0"
                                            Margin="0">
                                            <TextBlock
                                                Text="{Binding Name}"
                                                FontSize="14" 
                                                FontWeight="SemiBold"
                                                Foreground="#cbd5e0"/>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Column="1" Width="1" Background="#EDF3F9" Opacity="0.1" />
                    <Rectangle Grid.Column="1" Fill="#EDF3F9" Width="1" />

                    <!-- Albums -->
                    <Grid 
                        Grid.Column="2" 
                        RowSpacing="10" 
                        Margin="5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0">
                            <Button 
                                Content="{Binding AlbumCount}" 
                                Command="{Binding ShowAllAlbumsCmd}"
                                Classes="transparent-button" />
                            <Button 
                                Content="{Binding AlbumSortStatus}" 
                                Command="{Binding ToggleAlbumSortCmd}"
                                Classes="transparent-button"
                                HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <ListBox
                                ItemsSource="{Binding Albums}"
                                SelectedItem="{Binding SelectedAlbum}"
                                SelectionMode="Single">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Image 
                                                Source="{Binding AlbumArtUrl, Converter={StaticResource UrlToBitmapConverter}}" 
                                                Width="120" 
                                                Height="120"
                                                Stretch="Uniform" />
                                            
                                            <TextBlock 
                                                Grid.Row="1" 
                                                Text="{Binding Title}" 
                                                Foreground="#EDF3F9"
                                                Margin="0,5,0,0" />
                                            
                                            <TextBlock 
                                                Grid.Row="2" 
                                                Text="{Binding AlbumArtist}"
                                                Foreground="#EDF3F9"
                                                Opacity="0.5" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>

                    <GridSplitter Grid.Column="3" Width="1" Background="#EDF3F9" Opacity="0.1" />
                    <Rectangle Grid.Column="3" Fill="#EDF3F9" Width="1" />

                    <!-- Tracks -->
                    <Grid 
                        Grid.Column="4" 
                        RowSpacing="10"
                        Margin="5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0">
                            <Button
                                Content="{Binding TrackCount}"
                                Command="{Binding ShowAllAlbumsCmd}"
                                Classes="transparent-button" />
                            <Button 
                                Content="{Binding TrackSortStatus}"
                                Command="{Binding ToggleSongSortCmd}"
                                Classes="transparent-button"
                                HorizontalAlignment="Right" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <ListBox
                                ItemsSource="{Binding Tracks}"
                                SelectionMode="Single">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Volume, Now Playing and Playback Controls -->
                <Grid 
                    Grid.Row="2">

                    <!-- Volume Controls -->
                    <Grid 
                        ColumnSpacing="12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="40,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Image 
                            Grid.Column="0" 
                            Source="avares://JamBox.Core/Assets/icon-volume-min.png" 
                            VerticalAlignment="Center" />
                        <Slider 
                            Grid.Column="1" 
                            Minimum="0" 
                            Maximum="100" 
                            Width="128" />
                        <Image 
                            Grid.Column="2" 
                            Source="avares://JamBox.Core/Assets/icon-volume-max.png" 
                            VerticalAlignment="Center" />
                    </Grid>

                    <!-- Now Playing -->
                    <Grid 
                        IsVisible="{Binding IsTrackPlaying}"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid 
                            Grid.Column="0" 
                            Width="60" 
                            Height="60">
                            <Image 
                                Source="avares://JamBox.Core/Assets/cover.jpg" 
                                Stretch="UniformToFill"/>
                        </Grid>

                        <StackPanel 
                            Grid.Column="1" 
                            Margin="12,0">
                            
                            <TextBlock 
                                Grid.Column="0" 
                                Text="{Binding NowPlayingSongTitle}" 
                                Foreground="#EDF3F9" />
                            <Slider 
                                Minimum="0" 
                                Maximum="100" 
                                Width="256" />
                            <Grid>
                                <TextBlock 
                                    Text="{Binding NowPlayingElapsedTime}" 
                                    FontSize="10" 
                                    Foreground="#EDF3F9" 
                                    HorizontalAlignment="Left" />
                                <TextBlock 
                                    Text="{Binding NowPlayingRemainingTime}" 
                                    FontSize="10" 
                                    Foreground="#EDF3F9" 
                                    HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Playback Controls -->
                    <Grid 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        ColumnSpacing="12" 
                        Margin="40,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Button 
                            Grid.Column="0" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-repeat.png" 
                                Stretch="Uniform" />
                        </Button>

                        <Button 
                            Grid.Column="1" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-shuffle.png" 
                                Stretch="Uniform" />
                        </Button>

                        <Button 
                            Grid.Column="2" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-previous.png"
                                Stretch="Uniform" />
                        </Button>

                        <Button 
                            Grid.Column="3" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50" 
                            Command="{Binding PlaySongCmd}">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-play.png" 
                                Stretch="Uniform" />
                        </Button>

                        <Button 
                            Grid.Column="4" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-next.png" 
                                Stretch="Uniform" />
                        </Button>

                        <Button 
                            Grid.Column="5" 
                            Padding="0" 
                            Background="Transparent" 
                            CornerRadius="50">
                            <Image 
                                Source="avares://JamBox.Core/Assets/icon-graph.png" 
                                Stretch="Uniform" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </UserControl.Content>
</UserControl>