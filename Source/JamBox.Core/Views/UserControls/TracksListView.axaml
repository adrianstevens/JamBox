<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="JamBox.Core.Views.UserControls.TracksListView">

    <Grid
        RowSpacing="10"
        Margin="5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0">
            <Button
                Content="{Binding TrackCount}"
                Command="{Binding ShowAllAlbumsCmd}"
                Classes="transparent-button" />
            <Button
                Content="{Binding TrackSortStatus}"
                Command="{Binding SortTracksCommand}"
                Classes="transparent-button"
                HorizontalAlignment="Right" />
        </Grid>

        <Grid 
            Grid.Row="1">
            <ListBox
                ItemsSource="{Binding Tracks}"
                SelectedItem="{Binding SelectedTrack}"
                DoubleTapped="ListBox_DoubleTapped">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock
                                Grid.Column="0"
                                Text="{Binding Title}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                MaxLines="2"
                                ToolTip.Tip="{Binding Title}"
                                VerticalAlignment="Center" />
                            
                            <Image
                                Grid.Column="1" Background="Red"
                                Source="avares://JamBox.Core/Assets/icon-note.png"
                                VerticalAlignment="Center"
                                Opacity="0.6"
                                IsVisible="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
