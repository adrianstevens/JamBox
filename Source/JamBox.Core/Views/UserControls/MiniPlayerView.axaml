<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:conv="clr-namespace:JamBox.Core.Converters"
    mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
    x:Class="JamBox.Core.Views.UserControls.MiniPlayerView">

    <UserControl.Resources>
        <conv:BooleanInverseConverter x:Key="BooleanInverseConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Slider#SeekBar">
            <Setter Property="Height" Value="16" />
            <Setter Property="Margin" Value="0,8" />
        </Style>
        <Style Selector="Slider#SeekBar /template/ Track">
            <Setter Property="Height" Value="4" />
        </Style>
        <Style Selector="Slider#SeekBar Thumb">
            <Setter Property="IsVisible" Value="False" />
        </Style>
    </UserControl.Styles>

    <Grid Background="#1a202c">
        <!-- Album Art Background -->
        <Image 
            Stretch="UniformToFill"
            Opacity="0.3"
            asyncImageLoader:ImageLoader.Source="{Binding Playback.NowPlayingAlbumArtUrl}" />

        <!-- Content Overlay -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <!-- Song Title and Artist -->
            <StackPanel Grid.Row="1" Spacing="2">
                <TextBlock
                    Text="{Binding Playback.NowPlayingSongTitle}"
                    Foreground="#EDF3F9"
                    FontSize="16"
                    FontWeight="SemiBold"
                    TextTrimming="CharacterEllipsis" />
                <TextBlock
                    Text="{Binding Playback.NowPlayingArtist}"
                    Foreground="#9CA3AF"
                    FontSize="14"
                    TextTrimming="CharacterEllipsis"
                    Margin="1 0"/>
            </StackPanel>

            <Slider
                x:Name="SeekBar"
                Grid.Row="2"
                Minimum="0"
                Maximum="{Binding Playback.SeekLength}"
                Value="{Binding Playback.SeekPosition, Mode=TwoWay}" />

            <!-- Playback Controls -->
            <Grid
                Grid.Row="3"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0" 
                    Padding="0" 
                    Background="Transparent" 
                    Command="{Binding Playback.PlayPreviousCommand}"
                    Margin="0 3">
                    <Image 
                        Source="avares://JamBox.Core/Assets/icon-previous-2.png"
                        Stretch="Uniform" />
                </Button>

                <Button 
                    Grid.Column="2" 
                    Padding="0" 
                    Background="Transparent" 
                    Command="{Binding Playback.PlayPauseCommand}">
                    <Grid>
                        <Image 
                            IsVisible="{Binding Playback.IsTrackPlaying, Converter={StaticResource BooleanInverseConverter}}"
                            Source="avares://JamBox.Core/Assets/icon-play-2.png" 
                            Stretch="Uniform" />
                        <Image
                            IsVisible="{Binding Playback.IsTrackPlaying}"
                            Source="avares://JamBox.Core/Assets/icon-pause-2.png"
                            Stretch="Uniform" />
                    </Grid>
                </Button>

                <Button 
                    Grid.Column="4" 
                    Padding="0" 
                    Background="Transparent" 
                    Command="{Binding Playback.PlayNextCommand}"
                    Margin="0 3">
                    <Image 
                        Source="avares://JamBox.Core/Assets/icon-next-2.png" 
                        Stretch="Uniform" />
                </Button>
            </Grid>
        </Grid>

        <!-- Exit Mini Player Button -->
        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="8"
            Padding="4"
            Background="#40000000"
            CornerRadius="4"
            Command="{Binding MiniPlayerCommand}"
            ToolTip.Tip="Exit Mini Player">
            <Image
                Source="avares://JamBox.Core/Assets/icon-expand.png"
                Width="16"
                Height="16"
                Stretch="Uniform" />
        </Button>
    </Grid>
</UserControl>
