<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:conv="clr-namespace:JamBox.Core.Converters"
    x:Class="JamBox.Core.Views.UserControls.MiniPlayerView">

    <UserControl.Resources>
        <conv:BooleanInverseConverter x:Key="BooleanInverseConverter" />
    </UserControl.Resources>

    <Grid Background="#1a202c">
        <!-- Album Art Background -->
        <Image 
            Stretch="UniformToFill"
            Opacity="0.3"
            asyncImageLoader:ImageLoader.Source="{Binding Playback.NowPlayingAlbumArtUrl}" />

        <!-- Content Overlay -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Song Title and Artist -->
            <StackPanel Grid.Row="1" Spacing="2" Margin="0,10,0,5">
                <TextBlock
                    Text="{Binding Playback.NowPlayingSongTitle}"
                    Foreground="#EDF3F9"
                    FontSize="14"
                    FontWeight="SemiBold"
                    TextTrimming="CharacterEllipsis"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Text="{Binding Playback.NowPlayingArtist}"
                    Foreground="#9CA3AF"
                    FontSize="12"
                    TextTrimming="CharacterEllipsis"
                    HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Slider
                    x:Name="SeekBar"
                    Grid.Row="0"
                    Minimum="0"
                    Maximum="{Binding Playback.SeekLength}"
                    Value="{Binding Playback.SeekPosition, Mode=TwoWay}" />
            </Grid>

            <!-- Playback Controls -->
            <Grid Background="Red"
                Grid.Row="3"
                HorizontalAlignment="Center" 
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="28" />
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0" 
                    Padding="0" 
                    Background="Transparent" 
                    CornerRadius="50"
                    Command="{Binding Playback.PlayPreviousCommand}">
                    <Image 
                        Source="avares://JamBox.Core/Assets/icon-previous.png"
                        Stretch="Uniform" />
                </Button>

                <Button 
                    Grid.Column="1" 
                    Padding="0" 
                    Background="Transparent" 
                    CornerRadius="50" 
                    Command="{Binding Playback.PlayPauseCommand}">
                    <Grid>
                        <Image 
                            IsVisible="{Binding Playback.IsTrackPlaying, Converter={StaticResource BooleanInverseConverter}}"
                            Source="avares://JamBox.Core/Assets/icon-play.png" 
                            Stretch="Uniform" />
                        <Image
                            IsVisible="{Binding Playback.IsTrackPlaying}"
                            Source="avares://JamBox.Core/Assets/icon-pause.png"
                            Stretch="Uniform" />
                    </Grid>
                </Button>

                <Button 
                    Grid.Column="2" 
                    Padding="0" 
                    Background="Transparent" 
                    CornerRadius="50"
                    Command="{Binding Playback.PlayNextCommand}">
                    <Image 
                        Source="avares://JamBox.Core/Assets/icon-next.png" 
                        Stretch="Uniform" />
                </Button>
            </Grid>
        </Grid>

        <!-- Exit Mini Player Button -->
        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="8"
            Padding="4"
            Background="#40000000"
            CornerRadius="4"
            Command="{Binding MiniPlayerCommand}"
            ToolTip.Tip="Exit Mini Player">
            <Image
                Source="avares://JamBox.Core/Assets/icon-expand.png"
                Width="16"
                Height="16"
                Stretch="Uniform" />
        </Button>
    </Grid>
</UserControl>
