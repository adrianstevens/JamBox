<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:JamBox.Core.Converters"
    x:Class="JamBox.Core.Views.UserControls.NowPlayingView">

    <UserControl.Resources>
        <conv:UrlToBitmapConverter x:Key="UrlToBitmap" />
    </UserControl.Resources>

    <Grid
        Margin="0,20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid 
            Grid.Column="0" 
            Width="60" 
            Height="60">
            <Image Stretch="UniformToFill">
                <Image.Source>
                    <Binding 
                        Path="NowPlayingAlbumArtUrl"
                        Converter="{StaticResource UrlToBitmap}" />
                </Image.Source>
            </Image>
        </Grid>

        <StackPanel
            Grid.Column="1"
            Spacing="-8"
            Margin="12,0">
            <TextBlock
                Text="{Binding NowPlayingSongTitle}"
                Foreground="#EDF3F9" />
            <Slider
                x:Name="SeekBar"
                Minimum="0"
                Maximum="{Binding SeekLength}"
                Value="{Binding SeekPosition, Mode=TwoWay}"
                Width="256"
                PointerPressed="Seek_OnPointerPressed"
                PointerReleased="Seek_OnPointerReleased" />
            <Grid>
                <TextBlock
                    Text="{Binding NowPlayingElapsedTime}"
                    FontSize="10"
                    Foreground="#EDF3F9"
                    HorizontalAlignment="Left" />
                <TextBlock
                    Text="{Binding NowPlayingRemainingTime}"
                    FontSize="10"
                    Foreground="#EDF3F9"
                    HorizontalAlignment="Right" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
